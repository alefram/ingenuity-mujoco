<mujoco model="Ingenuity">
    <compiler angle="radian" assetdir="assets" autolimits="true"/>
    <option timestep="0.01" gravity="0 0 -9.81"/>

    <visual>
        <!--TODO:revisar si esta bien esto-->
        <map force="0.1" zfar="30"/>
        <rgba haze="0.15 0.25 0.35 1"/>
        <quality shadowsize="2048"/>
        <global offwidth="800" offheight="800"/>
    </visual>
    <asset>
        <texture type="2d" file="carbon.png"/> 
        <material name="box" rgba="1 1 1 1"/>
        <material name="blades" texture="carbon" rgba="0.3 0.3 0.3 1"/>
        <material name="legs" rgba="0.05 0.05 0.05 0.8"/>

        <mesh name="mainBody" file="mhs_mainbody_v16.stl"/>
        <mesh name="topBlades" file="mhs_topblades_v16.stl"/>
        <mesh name="bottomBlades" file="mhs_bottomblades_v16.stl"/>
        <mesh name="leg01Blades" file="mhs_leg01_v16.stl"/>
        <mesh name="leg02Blades" file="mhs_leg02_v16.stl"/>
        <mesh name="leg03Blades" file="mhs_leg03_v16.stl"/>
        <mesh name="leg04Blades" file="mhs_leg04_v16.stl"/>
    </asset>

    <worldbody>
        <body name="ingenuity" pos="0 0 0.4" quat="0 0 1 0">
            <freejoint/>
            <inertial pos="0 0 0.22" mass="1.8"/>
            <geom material="box" type="mesh" mesh="mainBody" pos="0 0 0"/>
            <body name="topBlades">
                <!--TODO:completar el joint para dar precision-->
                <joint name="thrust1" pos="0 0 -0.0675"/> 
                <geom contype="0" conaffinity="0" material="blades" type="mesh" mesh="topBlades" pos="0 0 -0.0675"/>
            </body>
            <body name="bottomBlades">
                <!--TODO:completar el joint para dar precision-->
                <joint name="thrust2" pos="0 0 0.0092"/>
                <geom contype="0" conaffinity="0" material="blades" type="mesh" mesh="bottomBlades" pos="0 0 0.0092"/>
            </body>
            <body name="leg01">
                <geom material="legs" type="mesh" mesh="leg01Blades" quat="1 0 0 0" pos="0.1945 -0.196 0.215"/>
            </body>
            <body name="leg02">
                <geom material="legs" type="mesh" mesh="leg02Blades" quat="1 0 0 0" pos="-0.196 -0.1945 0.215"/>
            </body>
            <body name="leg03">
                <geom material="legs" type="mesh" mesh="leg03Blades" quat="1 0 0 0" pos="-0.1945 0.196 0.215"/>
            </body>
            <body name="leg04">
                <geom material="legs" type="mesh" mesh="leg04Blades" quat="1 0 0 0" pos="0.196 0.1945 0.215"/>
            </body>
            <camera name="nav_cam" pos="0.08 0 0.22" mode="fixed" xyaxes="0 1 0 1 -1 -1"/> 
            <site name="imu" pos="0 0 0.15"/>
            <site name="laser_rangefinder" pos="0 0 0.2"/>
        </body>
    </worldbody>

    <actuator>
        <motor name="thrust1" joint="thrust1" ctrlrange="-1 1" gear="0 0 10 0 0 0.1" />
        <motor name="thrust2" joint="thrust2" ctrlrange="-1 1" gear="0 0 10 0 0 0.1"/>
    </actuator>

    <sensor>
        <rangefinder name="sensor_laser" site="laser_rangefinder"/>
        <gyro name="sensor_gyro" site="imu"/>
        <accelerometer name="sensor_acc" site="imu"/>
        <framequat name="sensor_quat" objtype="site" objname="imu"/>
    </sensor>
</mujoco>
